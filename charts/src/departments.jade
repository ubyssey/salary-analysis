doctype html
html(lang="en")
    head
        title Departments - UBC Salary List
        link(rel="stylesheet", href="dept.css")
    
    body
        h1 UBC Departments Report
        p Processed from <a href="http://ubyssey.ca/salaries">data obtained by the Ubyssey.</a>
        
        form#searchform
            label Search:
            input(type="text").searchbar
            select#facultyselector
            ul#campuses
                li
                    input(type="checkbox" name="campus-van" checked)#checkbox-van
                    label(for="checkbox-van") Vancouver
                li
                    input(type="checkbox" name="campus-oka" checked)#checkbox-oka
                    label(for="checkbox-oka") Okanagan
        
        #deptchart.chart
        #expenseschart.chart
        
        h1 Faculties
        #facchart.chart.halfwidth
        
        script(src="../scripts/d3.min.js")
        script(src="../scripts/d3-tip.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        
        script(src="../scripts/dept.js")